<div class="modal" tabindex="-1" id="modalFormImport">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Import JSON</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form action="/import" method="POST" id="importForm" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="FileMovies" class="form-label">movies.json:</label>
                        <input form="importForm" class="form-control" type="file" id="FileMovies" accept="application/JSON" name="FileMovies" required>
                        <label for="FileCasts" class="form-label">casts.json:</label>
                        <input form="importForm" class="form-control" type="file" id="FileCasts" accept="application/JSON" name="FileCasts" required>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="submit" form="importForm" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>